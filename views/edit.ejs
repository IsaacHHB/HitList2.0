<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
   
    <h1>Edit HitList</h1>
    <ul>
        
     <% let el = list %>
            
     <form action="/hitlist/createHitlist" method='POST' data-id='<%=el._id%>'>
        <% if(el.name !== undefined) { %>
            <label for="name">Name</label>
        <input type="text" placeholder="Enter Contact's Name" name='name' id="name" value = '<%= el.name %>'>
        <% } %>
        <% if(el.url !== undefined) { %>
            <label for="url">Company URL</label>
        <input type="text" placeholder="Enter Company URL" name='url' id="url" value = '<%=el.url %>'>
        <% } %>
        <% if(el.position !== undefined) { %>
            <label for="position">Position</label>
        <input type="text" placeholder="Enter Position" name='position' id="position" value = '<%= el.position %>'>
        <% } %>
        <% if(el.company !== undefined) { %>
            <label for="company">Company</label>
        <input type="text" placeholder="Enter Company Name" name='company' id="company" value = '<%= el.company %>'>
        <% } %>
        <% if(el.email !== undefined) { %>
<label for="email">email</label>
        <input type="email" placeholder="Enter Contact's email" name='email' id="email" value = '<%= el.email %>'>
        <% } %>
        <% if(el.typeOfPosition !== undefined) { %>
            <label for="typeOfPosition">Type of Position</label>
        <input type="text" placeholder="Enter Type of Position" name='typeOfPosition' id="typeOfPosition" value = '<%= el.typeOfPosition %>'>
        <% } %>
        <label for="coffeeChat">Coffee Chat?</label>
        <input type="text" placeholder="Coffee Chat?" name='<%= el.coffeeChat %>' id="coffeeChat">
        <label for="dateOfChat">Date of Coffee Chat</label>
        <input type="text" placeholder="Date of coffee chat" name='<%= el.dateOfCoffeeChat %>' id="dateOfChat">
        <label for="applied">Applied?</label>
        <input type="text" placeholder="Applied?" name='<%= el.applied %>' id="applied">
        <label for="interview">Interview Date</label>
        <input type="text" placeholder="Interview Date" name='<%= el.interviewDate %>' id="interview"> 
        <label for="followUp">Did you follow up?</label>
        <input type="text" placeholder="Did you follow up?" name='<%= el.followUp %>' id="followUp">
        <label for="thankYou">Did you send a thank you?</label>
        <input type="text" placeholder="Did you send a Thank You?" name='<%= el.thankYou %>' id="thankYou">
        <% if(el.comments !== undefined) { %>
            <label for="comments">Comments</label>
        <input type="text" placeholder="Comments" name='comments' value = '<%= el.comments%>' id="comments">
        <% } %>
        <input type="submit">
    </form>
    
 
    <a href="/hitlist/details/:userId">View</a>

    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
</body>


</html>